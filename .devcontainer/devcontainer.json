{
    "name": "DevContainer for Haskell (GHC, Stack, Cabal, HIE, LSP, DAP, etc.)",
    "dockerFile": "Dockerfile",
    "context":"..",
    "runArgs": [],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "languageServerHaskell.hlintOn": true,
        "languageServerHaskell.liquidOn": true,
        "languageServerHaskell.enableHIE": true,
        "languageServerHaskell.hieVariant": "haskell-language-server",
        "editor.rulers": [80],
    },
    "remoteUser": "haskeller",
    "extensions": [
        "justusadam.language-haskell",
        "haskell.haskell",
        "phoityne.phoityne-vscode",
        "eriksik2.vscode-ghci",
        "edka.haskutil",
        "sergey-kintsel.haskell-formatter-vscode-extension",
        // "MustafaHafidi.liquidhaskell-diagnostics",
        "coenraads.bracket-pair-colorizer-2",
        "sheaf.groovylambda",
    ]
}
